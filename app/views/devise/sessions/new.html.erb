<div class="tyn-content tyn-auth tyn-auth-centered">
  <div class="container">
    <p class="text-center"><%= notice %></p>
    <p class="text-center"><%= alert %></p>
    <div class="row justify-content-center">
      <div class="col-xl-4 col-lg-5 col-md-7 col-sm-9">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'card border-0', data: { turbo: false } }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="p-4">
            <h3>Login</h3>
            <div class="row g-3">
              <div class="col-12">
                <div class="form-group">
                  <label class="form-label" for="email-address">Email Address</label>
                  <div class="form-control-wrap">
                    <%= f.email_field :email, class: 'form-control', id: 'email-address', placeholder: 'youremail@example.com', autofocus: true, autocomplete: "email" %>
                  </div>
                </div>
              </div>
              <div class="col-12">
                <div class="form-group">
                  <label class="form-label d-flex" for="password">Password <%= link_to "Forgot ?", new_password_path(resource_name), class: 'link ms-auto' %></label>
                  <div class="form-control-wrap">
                    <%= f.password_field :password, class: 'form-control', id: 'password', placeholder: 'password', autocomplete: "current-password" %>
                  </div>
                </div>
              </div>
              <div class="col-12">
                <%= f.submit 'Account Login', class: 'btn btn-primary w-100' %>
              </div>
            </div><!-- .row -->
          </div>
          
        <% end %><!-- .card -->
        <div class="text-center mt-4">
          <p class="small">Don't have an account?
            &nbsp;<%= link_to 'Register', new_registration_path(resource_name) %>
          </p>
        </div>
      </div><!-- .col -->
    </div><!-- .row -->
  </div><!-- .container -->
</div>
