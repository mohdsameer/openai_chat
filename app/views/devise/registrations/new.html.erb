<div class="tyn-content tyn-auth tyn-auth-centered">
  <div class="container">
    <p class="text-center"><%= notice %></p>
    <p class="text-center"><%= alert %></p>
    <div class="row justify-content-center">
      <div class="col-xl-6 col-lg-8">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'card border-0', data: { turbo: false } }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="p-4">
            <h3>Create Account</h3>
            <div class="row g-3 gx-4">
              <div class="col-sm-12">
                <div class="form-group">
                  <label class="form-label" for="username">Your Name</label>
                  <div class="form-control-wrap">
                    <%= f.text_field :name, class: 'form-control', id: 'username', placeholder: 'yourname' %>
                  </div>
                </div>
              </div>
              <div class="col-sm-12">
                <div class="form-group">
                  <label class="form-label" for="email-address">Email Address</label>
                  <div class="form-control-wrap">
                    <%= f.email_field :email, class: 'form-control', id: 'email-address', placeholder: 'youremail@example.com', autocomplete: "email" %>
                  </div>
                </div>
              </div>
              <div class="col-sm-12">
                <div class="form-group">
                  <label class="form-label" for="password">Password</label>
                  <div class="form-control-wrap">
                    <%# if @minimum_password_length %>
                      <!-- <em>(<%#= @minimum_password_length %> characters minimum)</em> -->
                    <%# end %>
                    <%= f.password_field :password, class: 'form-control', id: 'password', placeholder: 'password', autocomplete: "new-password" %>
                  </div>
                </div>
              </div>
              <div class="col-sm-12">
                <div class="form-group">
                  <label class="form-label" for="repeat-password">Password Repeat</label>
                  <div class="form-control-wrap">
                    <%= f.password_field :password_confirmation, class: 'form-control', id: 'repeat-password', placeholder: 'password again', autocomplete: "new-password" %>
                  </div>
                </div>
              </div>
              <div class="col-12">
                <%= f.submit 'Account Register', class: 'btn btn-primary w-100' %>
              </div>
            </div><!-- .row -->
          </div>
        <% end %><!-- .card -->

        <div class="text-center mt-4">
          <p class="small">Already have an account?
            &nbsp;<%= link_to "Login", new_session_path(resource_name) %>
          </p>
        </div>
      </div><!-- .col -->
    </div><!-- .row -->
  </div><!-- .container -->
</div>
