<div class="tyn-content tyn-auth tyn-auth-centered">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xl-4 col-lg-5 col-md-7 col-sm-9">
        <div class="">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'card border-0' }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="p-4">
            <h3>Recovery Password</h3>
            <div class="row g-3">
              <div class="col-12">
                <div class="form-group">
                  <label class="form-label" for="email-address">Email Address</label>
                  <div class="form-control-wrap">
                    <%= f.email_field :email, class: 'form-control', id: 'email-address', placeholder: 'youremail@example.com', autofocus: true, autocomplete: "email" %>
                  </div>
                </div>
              </div><!-- .col -->
              <div class="col-12">
                <%= f.submit 'Reset Password', class: 'btn btn-primary w-100' %>
              </div><!-- .col -->
            </div><!-- .row -->
          </div>
        <% end %><!-- .card -->
        <div class="mt-4">
          <p class="small">Some how remembered? <%= link_to "Login", new_session_path(resource_name) %></p>
        </div>
      </div><!-- .col -->
    </div><!-- .row -->
  </div><!-- .container -->
</div>
